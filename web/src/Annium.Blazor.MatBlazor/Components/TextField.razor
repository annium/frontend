@namespace Annium.Blazor.MatBlazor.Components

@typeparam TValue

<MatBlazor.MatTextField
    Value="@State.Value"
    OnInput="@(e => State.Set((TValue)e.Value!))"
    Class="@ClassName"
    HelperTextValidation="@true"
    HelperText="@State.Message"
    OnFocusOut="@(_ => StateHasChanged())"
    @attributes="Attributes">
</MatBlazor.MatTextField>