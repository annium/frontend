@using Annium.Blazor.Charts.Components
@using Annium.Blazor.Charts.Domain.Interfaces
@using Annium.Blazor.Charts.Domain.Models
@namespace Demo.Blazor.Charts.Pages.Home

<Chart ChartContext="@ChartContext" CssClass="@Styles.Chart">
    <Pane CssClass="@Styles.CandlesPane">
        <PaneSeries>
            <CandleSeries T="ICandle" Source="@_candleSeries" />
            <Label T="ICandle" Source="@_candleSeries" Text="@_getCandleLabel" Top="20" Left="20" />
            <MultiRangeSeries
                TM="MultiValue<RangeItem>"
                TI="RangeItem"
                Source="_rangeSeries"
                Centered="true"
                ContinueLast="false"
                ItemColor="@("rgba(50, 0, 150, 0.5)")" />
            <MultiLabel
                TValue="MultiValue<RangeItem>"
                TItem="RangeItem"
                Source="_rangeSeries"
                Text="@_getRangeText"
                Left="@_getRangeLeft"
                Top="@_getRangeTop" />
            <Resolution CssClass="@Styles.Resolution" />
        </PaneSeries>
        <PaneRight CssClass="@Styles.PaneRight">
            <YAxis />
        </PaneRight>
    </Pane>
    <Pane CssClass="@Styles.LinesPane">
        <PaneSeries>
            <LineSeries T="PointValue" Source="_openSeries" />
        </PaneSeries>
        <PaneBottom CssClass="@Styles.PaneBottom">
            <XAxis />
        </PaneBottom>
        <PaneRight CssClass="@Styles.PaneRight">
            <YAxis />
        </PaneRight>
    </Pane>
    <Crosshair />
</Chart>