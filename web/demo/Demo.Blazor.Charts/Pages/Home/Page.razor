@using Annium.Blazor.Charts.Components
@using Annium.Blazor.Charts.Domain

@namespace Demo.Blazor.Charts.Pages.Home

<Chart ChartContext="@ChartContext" CssClass="@Styles.Chart">
    <Pane CssClass="@Styles.CandlesPane">
        <PaneSeries>
            <CandleSeries T="Candle" Source="@_candleSeries" />
            <Label T="Candle" Source="@_candleSeries" GetText="@((Func<Candle, string>) GetLabel)" GetTop="20" GetLeft="20" />
            <Resolution CssClass="@Styles.Resolution" />
        </PaneSeries>
        <PaneRight CssClass="@Styles.PaneRight">
            <YAxis />
        </PaneRight>
    </Pane>
    <Pane CssClass="@Styles.LinesPane">
        <PaneSeries>
            <LineSeries T="PlainValue" Source="_openSeries" />
        </PaneSeries>
        <PaneBottom CssClass="@Styles.PaneBottom">
            <XAxis />
        </PaneBottom>
        <PaneRight CssClass="@Styles.PaneRight">
            <YAxis />
        </PaneRight>
    </Pane>
    <Crosshair />
</Chart>